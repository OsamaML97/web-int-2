        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.evName, "event name", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
